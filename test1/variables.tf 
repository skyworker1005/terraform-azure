variable "resource_group_name" {
  description = "The name of the resource group"
  type        = string
}

variable "location" {
  description = "The Azure location where the resources will be created"
  type        = string
}

variable "workspace_name" {
  description = "The name of the Databricks workspace"
  type        = string
}

variable "token_name" {
  description = "The name of the Databricks token"
  type        = string
}

variable "token_lifetime_days" {
  description = "The lifetime of the token in days"
  type        = number
}

variable "cluster_name" {
  description = "The name of the Databricks cluster"
  type        = string
}

variable "cluster_config" {
  description = "Configuration for the Databricks cluster"
  type        = map(any)
}
